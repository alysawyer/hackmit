{
  "name": "voice-quiz-game",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build && npm run server:build",
    "server:dev": "tsx watch server/src/index.ts",
    "server:build": "tsc --project server/tsconfig.json",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0"
  },
  "dependencies": {
    "zod": "^3.22.0"
  }
}
